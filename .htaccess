# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect index.html to root to prevent duplicate content
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
    RewriteRule ^index\.html$ / [R=301,L]

    # Force HTTPS (uncomment if needed)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Allow direct access to channel and snaps directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^(channel|snaps)(/|$) - [L]

    # Allow .well-known directory
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^\.well-known(/|$) - [L]

    # Remove .html extension (but not for channel and snaps)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.html -f
    RewriteCond %{REQUEST_URI} !^/(channel|snaps)
    RewriteRule ^([^\.]+)$ $1.html [NC,L]

    # Prevent direct access to .html files
    RewriteCond %{REQUEST_URI} ^(.+)\.html$ [NC]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.+)\.html$ /$1 [R=301,L,NC]
</IfModule>

# Set proper cache control headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 day"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType application/x-font-woff "access plus 1 month"
</IfModule>

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript
</IfModule>

# Prevent access to sensitive files
<FilesMatch "^(README|LICENSE|CHANGELOG|package\.json)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Deny from all
    </IfModule>
</FilesMatch>
